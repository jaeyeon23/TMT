<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN'
'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap>

   <typeAlias alias="basket_hotel" type="basket.BasketHVO" />

   <resultMap id="basketRes" class="basket_hotel">
      <result property="no" column="no" />
      <result property="name" column="name" />
      <result property="price" column="price" />
      <result property="country" column="country" />
      <result property="region" column="region" />
      <result property="image1" column="image1" />
      <result property="id" column="id"/>
    </resultMap>
    
 <typeAlias alias="basket_tour" type="basket.BasketTVO" />

   <resultMap id="basketRes2" class="basket_tour">
      <result property="no" column="no" />
      <result property="name" column="name" />
      <result property="price" column="price" />
      <result property="country" column="country" />
      <result property="region" column="region" />
      <result property="image1" column="image1" />
      <result property="id" column="id"/>
    </resultMap>



   <!-- 가져온 상품의 정보를 장바구니 테이블에 저장 -->
   <insert id="putbasket" parameterClass="basket_hotel">
      INSERT INTO basket
      (no, name, price, country, region, id,
       image1)
      VALUES (seq_basketvo.NEXTVAL,  #name#, #price#, #country#,
      #region#, #id#, #image1#)
   </insert>


   <!-- 세션 id값에 해당하는 호텔장바구니 테이블의 정보를 가져온다. -->
   <select id="selecthbasket" resultClass="basket_hotel" parameterClass="basket_hotel">
      SELECT no, name, image1, price, region, country FROM basket_hotel WHERE id = #id#
   </select>
   
   <!-- 세션 id값에 해당하는 투어장바구니 테이블의 정보를 가져온다. -->
   <select id="selecttbasket" resultClass="basket_tour" parameterClass="basket_tour">
      SELECT no, name, image1, price, region, country FROM basket_tour WHERE id = #id#
   </select>
   
      <!-- 장바구니 체크박스 선택 삭제 -->
   <delete id="deletehbasket" parameterClass="basket_hotel">
      DELETE FROM basket_hotel WHERE no = #no# and id = #id#
   </delete>
   
   

</sqlMap>