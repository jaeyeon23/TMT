		<result property="tel" column="tel" />
		<result property="checkin" column="checkin" />
		<result property="checkout" column="checkout" />
		<result property="content" column="content" />
		<result property="people" column="people" />
		<result property="room" column="room" />
	</resultMap> -->
	
	<select id="orderHList" resultMap="orderHRes">
		select no,substr(name,0,7) as name,price,country,region,image1,id,tel,to_char(checkin,'yyyy-mm-dd') as checkin,to_char(checkout,'yyyy-mm-dd') as checkout,
		content,people,room from order_hotel
		order by no desc
	</select>
	
	<select id="orderHView" resultMap="orderHRes">
		select * from order_hotel
		where no = #no#
	</select>
	
	<select id="orderTList" resultMap="orderTRes">
		select no,substr(name,0,7) as name,price,country,region,image1,id,
		content from order_tour
		order by no desc
	</select>
	
	<select id="orderTView" resultMap="orderTRes">
		select * from order_tour
		where no = #no#
	</select>
	
</sqlMap>