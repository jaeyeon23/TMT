<sql id="select-allo">
	SELECT * FROM ORDER_HOTEL
</sql>
	
	<!-- 구매한 호텔 상품을 구매내역 테이블에 저장 -->
	<insert id="putorder_H" parameterClass="java.util.Map">
		INSERT INTO order_hotel
		(seq_no,no, name, price, content, country, region, image1, tel, checkin,
		 checkout, people, room, id, reg_date)
		VALUES (SEQ_NO.NEXTVAL, #no#, #name#, #price#*#room#,#content#, #country#, #region#, #image1#, #tel#, #checkin#,
		 #checkout#, #maxnum#, #room#, #id#, #reg_date#)
	</insert>
	
	<insert id="putorder_T" parameterClass="java.util.Map">
		INSERT INTO order_tour
		(seq_no,no, name, price, content, country, region, image1, amount, id, reg_date)
		VALUES (SEQ_NO.NEXTVAL, #no#, #name#, #price#*#amount# ,#content#, #country#, #region#, #image1#, #amount#, #id#, #reg_date#)
	</insert>
	
	<insert id="putorder_A" parameterClass="order_air">
		INSERT INTO order_air
		(seq_no,no, arv, dep, price, content, image1, people, seat_grade, ad, dd, air_company, id, reg_date)
		VALUES (SEQ_NO.NEXTVAL, #no#, #arv#, #dep#, #price#, #content#, #image1#, #people#, #seat_grade#, #ad#, #dd#, #air_company#, #id#, sysdate)
	</insert>
	
	<!-- OrderList Hotel  -->
	<select id="select_Horder" resultClass="order_hotel" parameterClass="order_hotel">
	   SELECT  name,price,country,region,image1 FROM order_hotel WHERE id = #id#
	</select>
	
	<!-- OrderList Tour  -->
	<select id="select_Torder" resultClass="order_tour" parameterClass="order_tour">
	   SELECT  name,price,country,region,image1 FROM order_tour WHERE id = #id#
	</select>
	
	<!-- OrderList Air  -->
	<select id="select_Aorder" resultClass="order_air" parameterClass="order_air">
	   SELECT  arv,dep,price,air_company,image1 FROM order_air WHERE id = #id#
	</select>
	
