      SELECT no, name, image1, price, region, country, seq_no FROM basket_tour WHERE id = #id#
   </select>
   
      <!-- 장바구니 체크박스 선택 삭제 -->
   <delete id="deletehbasket" parameterClass="baskethotel">
      DELETE FROM basket_hotel WHERE no = #no# and id = #id# and seq_no=#seq_no#
   </delete>
   
